# Enable the rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /HomEase/public/

    # If the requested file or directory doesn't exist
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Special rule for Google OAuth callback - Explicitly route to the auth/google-callback handler
    RewriteRule ^auth/google-callback$ index.php?controller=auth&action=google-callback [L,QSA]

    # Send everything else to index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Set default character set
<IfModule mod_mime.c>
    AddType application/x-httpd-php .php
    AddDefaultCharset UTF-8
</IfModule>

# Enable PHP error displaying for development
<IfModule mod_php8.c>
    php_flag display_errors On
    php_value error_reporting 32767
</IfModule>

<IfModule mod_php7.c>
    php_flag display_errors On
    php_value error_reporting 32767
</IfModule>

# Disable directory listings
Options -Indexes

# Set default error pages
ErrorDocument 404 /HomEase/public/index.php?controller=error&action=notFound
ErrorDocument 403 /HomEase/public/index.php?controller=error&action=forbidden
ErrorDocument 500 /HomEase/public/index.php?controller=error&action=serverError

# Enable gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Set caching for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
</IfModule>

# Disable server signature
ServerSignature Off 