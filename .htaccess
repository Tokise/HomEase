# Enable the rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /HomEase/

    # If the request is for an existing file or directory, serve it directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # If the request starts with /public and the file/directory exists, serve it directly
    RewriteCond %{REQUEST_URI} ^/HomEase/public/
    RewriteCond %{DOCUMENT_ROOT}/HomEase%{REQUEST_URI} -f [OR]
    RewriteCond %{DOCUMENT_ROOT}/HomEase%{REQUEST_URI} -d
    RewriteRule ^ - [L]

    # If the request is for the root URL, remove index.php if present
    RewriteRule ^index\.php$ - [L]
    
    # Handle Google handler directly
    RewriteCond %{REQUEST_URI} ^/auth/google-handler$
    RewriteRule ^ - [L]
    RewriteRule ^auth/google-handler$ public/auth/google-handler.php [QSA,L]

    # Handle all other routes through index.php
    RewriteRule ^(.*)$ public/index.php [QSA,L]
</IfModule>

# Set default character set
<IfModule mod_mime.c>
    AddType application/x-httpd-php .php
    AddDefaultCharset UTF-8
</IfModule>

# Enable PHP error displaying for development
php_flag display_errors On
php_value error_reporting E_ALL

# Disable directory listings
Options -Indexes

# Set default error pages
ErrorDocument 404 /HomEase/public/index.php?controller=error&action=notFound
ErrorDocument 403 /HomEase/public/index.php?controller=error&action=forbidden
ErrorDocument 500 /HomEase/public/index.php?controller=error&action=serverError

# Enable gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Set caching for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Disable server signature
ServerSignature Off 