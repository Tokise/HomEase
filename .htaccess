# Enable the rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /HomEase/

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # If the request is for an existing file or directory in public, serve it directly
    RewriteCond %{REQUEST_URI} ^/HomEase/public/
    RewriteCond %{DOCUMENT_ROOT}/HomEase%{REQUEST_URI} -f [OR]
    RewriteCond %{DOCUMENT_ROOT}/HomEase%{REQUEST_URI} -d
    RewriteRule ^ - [L]

    # If the request is for an existing file or directory in root, serve it directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Handle Google handler directly
    RewriteRule ^auth/google-handler$ public/auth/google-handler.php [QSA,L]

    # Handle all other requests through index.php
    RewriteRule ^$ public/index.php [L]
    RewriteRule ^(.*)$ public/index.php [QSA,L]
</IfModule>

# Set default character set
AddDefaultCharset UTF-8

# Enable PHP error displaying for development
php_flag display_errors On
php_value error_reporting E_ALL

# Disable directory listings
Options -Indexes

# Set default error pages
ErrorDocument 404 /HomEase/public/index.php?controller=error&action=notFound
ErrorDocument 403 /HomEase/public/index.php?controller=error&action=forbidden
ErrorDocument 500 /HomEase/public/index.php?controller=error&action=serverError

# Enable gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Set caching for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Disable server signature
ServerSignature Off 